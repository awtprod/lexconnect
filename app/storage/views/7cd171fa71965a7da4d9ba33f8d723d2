        jQuery(document).ready(function($) {
            $('#county').change(function(){
                $.get("<?php echo url('api/getRate'); ?>", { zipcode: $('#zipcode').val(), orderId: $('#orders_id').val(), type: $('#type').val(), client: $('#client').val(), priority: $('#priority').val(), county: $('#county').val(), state: $('#state').val()},
                        function(data) {
                            $('#rate').append( "Estimated Cost: " + data );
                            $('#submit').show();
                            $('#data').show();



                        });
            });
        });

