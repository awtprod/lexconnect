<h1>View Active Jobs</h1>


<?php if(!empty($job)): ?>

<table>
  <tr>
    <th>Job #</th>
    <th>Task</th>		
    <th>Defendant</th>
    <th>Deadline</th>
  </tr>
<?php foreach($job as $jobs): ?>
<tr>
<td><?php echo link_to("/jobs/{$jobs["id"]}", $jobs["id"]); ?></td>
<td><?php echo $jobs["task"]; ?></td>
<td><?php echo $jobs["defendant"]; ?></td> 
<?php if(!empty($jobs["link"]["link"])): ?>
<td><?php echo link_to("/reprojections/{$jobs["link"]["link"]}", $jobs["deadline"]); ?> </td>
<?php else: ?>
<td><?php echo $jobs["deadline"]; ?></td> 
<?php endif; ?>

<?php endforeach; ?>
<?php else: ?>
