<?php $__env->startSection('content'); ?>
<h1>Job #<?php echo $jobs->id; ?></h1><p>

    <?php echo link_to("/documents/view/?jobId={$jobs->id}&_token={$token}", 'View Documents'); ?><br>


<table>
  <tr>
    <th>Task</th>
    <th>Deadline</th>
    <th>Completed</th>
  </tr>

<?php foreach($tasks as $task): ?>
<tr>
<td><?php echo $task->step; ?></td>
<td><?php echo $task->deadline; ?></td>
<?php if(is_null($task->completion) AND $first  == 'true'): ?>
        <?php if($jobs->status == '0'): ?>
<td>Job on Hold</td>
            <?php echo $first = false;; ?>

        <?php else: ?>
<td><?php echo link_to("/tasks/complete/?id={$task->id}&_token={$token}", 'Complete Task'); ?></td>

            <?php echo $first = false;; ?>

<?php endif; ?>
<?php elseif(is_null($task->completion) AND $first  == 'false'): ?>
    <td></td>
<?php else: ?>
<td><?php echo $task->completion; ?></td>
<?php endif; ?>

</tr>

    <?php endforeach; ?>
</table>
<?php $__env->stopSection(); ?>

<?php echo $__env->make('layouts.default', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>